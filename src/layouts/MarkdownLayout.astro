---
const { frontmatter } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{frontmatter.title}</title>
  </head>
  <body>
    <main>
      <article>
        <h1 id="title">{frontmatter.title}</h1>
        <div id="content">
          <slot />
        </div>
        <a id="back" href="../">戻る</a>
      </article>
    </main>
  </body>
  <style is:global>
    * {
      font-family: sans-serif;
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-size: 16px;
    }
    html {
      background: #efefef;
      color: #212121;
    }
    main {
      width: min(100%, 500px);
      margin: 0 auto;
      padding: 4rem 2rem;
    }

    article {
      display: grid;
      gap: 2rem;
    }

    #content {
      padding: 1rem;
      background: #fff;
      border-radius: 0.5rem;
    }

    a {
      text-decoration: none;
      color: #212121;
      &:hover {
        text-decoration: underline;
        color: color-mix(in srgb, #212121 60%, transparent);
      }
    }
    #title {
      text-align: center;
      font-size: 1.5rem;
      &::after,
      &::before {
        content: '〜';
        padding-inline: 0.5rem;
      }
    }
    #back {
      padding: 0.5rem 1rem;
      border-radius: 0.5rem;
      background: #212121;
      color: #fff;

      width: fit-content;
      text-decoration: none;

      &:hover,
      &:focus {
        background: #818181;
        color: #fff;
      }
    }
  </style>
</html>
